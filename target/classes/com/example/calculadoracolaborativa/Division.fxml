<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculadoracolaborativa.Division">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Division de dos números">
        <font>
            <Font name="Baskerville Old Face" size="36.0" />
        </font>
    </Label>

    <Label fx:id="lblResul" text="Resultado: " textFill="RED">
        <font>
            <Font name="Baskerville Old Face" size="24.0" />
        </font>
    </Label>

    <TextField fx:id="txtNum1" promptText="Número 1">
        <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
        </font>
    </TextField>

    <TextField fx:id="txtNum2" promptText="Número 2">
        <font>
            <Font name="Arial Rounded MT Bold" size="14.0" />
        </font>
    </TextField>

    <Button fx:id="btnDivide" onAction="#btnDivide" text="Dividir" textAlignment="CENTER">
        <font>
            <Font name="Baskerville Old Face" size="18.0" />
        </font>
    </Button>

    <Button onAction="#btnVolverMenu" text="Volver" textAlignment="CENTER">
        <font>
            <Font name="Baskerville Old Face" size="18.0" />
        </font>
    </Button>
</VBox>
